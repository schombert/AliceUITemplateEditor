cppflags = -std=c++20 -O0 -DWIN32 -D_AMD64_ -I./GLFW -I./lunasvg -I./plutovg -I./ -I.
cflags = -std=c++20 -O0 -DWIN32 -D_AMD64_ -I./GLFW -I./lunasvg -I./plutovg -I./ -I.
debug_flags = -g -gdwarf-3 -gcodeview
debug_flags_link = -g -gdwarf-3

#debug_flags =
#debug_flags_link =

rule clone_imgui
  command = cmd /c "git clone --depth=1 https://github.com/ocornut/imgui.git && touch $out || touch $out"
  description = cloning imgui

rule compile_cpp
  command = clang++ -MD -MF $out.d $cppflags $debug_flags -c $in -o $out
  description = compile $out
  depfile = $out.d

rule compile_c
  command = clang++ -MD -MF $out.d $cflags $debug_flags -c $in -o $out
  description = compile $out
  depfile = $out.d

rule link_cpp
  command = clang++ $cppflags $debug_flags_link -o $out $in -L./lib -lAdvapi32 -lOle32 -lGdi32 -lShcore -lglfw3dll -lopengl32 -Xlinker /subsystem:windows -Xlinker /NODEFAULTLIB:MSVCRT
  description = link $out

build out/cache/main.o : compile_cpp main.cpp
build out/cache/asvg.o : compile_cpp asvg.cpp
build out/cache/project_serialization.o : compile_cpp project_serialization.cpp
build out/cache/filesystem.o : compile_cpp filesystem.cpp
build out/cache/glew.o : compile_cpp glew.c
build out/cache/texture.o : compile_cpp texture.cpp
build out/cache/imgui.o : compile_cpp imgui.cpp
build out/cache/imgui_widgets.o : compile_cpp imgui_widgets.cpp
build out/cache/imgui_tables.o : compile_cpp imgui_tables.cpp
build out/cache/imgui_stdlib.o : compile_cpp imgui_stdlib.cpp
build out/cache/imgui_impl_opengl3.o : compile_cpp imgui_impl_opengl3.cpp
build out/cache/imgui_impl_glfw.o : compile_cpp imgui_impl_glfw.cpp
build out/cache/imgui_draw.o : compile_cpp imgui_draw.cpp
build out/cache/imgui_demo.o : compile_cpp imgui_demo.cpp

build out/cache/graphics.o : compile_cpp lunasvg/graphics.cpp
build out/cache/lunasvg.o : compile_cpp lunasvg/lunasvg.cpp
build out/cache/svgelement.o : compile_cpp lunasvg/svgelement.cpp
build out/cache/svggeometryelement.o : compile_cpp lunasvg/svggeometryelement.cpp
